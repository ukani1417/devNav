{
  "manifest_version": 3,
  "name": "DevNav",
  "version": "1.0.0",
  "description": "Fast URL navigation for developers",
  "author": "DevNav Team",

  "omnibox": {
    "keyword": ">"
  },

  "permissions": [
    "storage",
    "sidePanel",
    "search"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "",
    "default_title": "DevNav - Click to open configuration panel"
  }
}